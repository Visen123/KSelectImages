<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yanyiyun.kselectimages">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.yanyiyun.kselectimages.KApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yanyiyun.kselectimages.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.yanyiyun.kselectimages.ui.KSelectImagesActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.yanyiyun.kselectimages.ui.TakePhotoPreview"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.yanyiyun.kselectimages.ui.ImagePreviewActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.yanyiyun.kselectimages.ui.ImageZoomActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.yanyiyun.kselectimages.ui.ReleaseImageActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>